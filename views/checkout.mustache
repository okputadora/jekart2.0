<!DOCTYPE html>
<html dir="ltr" lang="en-US">
{{> head }}

<body class="stretched">

	<!-- Document Wrapper
	============================================= -->

	<div id="wrapper" class="clearfix">

    {{> nav }}
    <div id="page-menu" class="no-sticky" style="background: #1b1b1b">
      <div id="" class='custom-page-banner'style="position: fixed; width: 100%;">
        <div class="container clearfix">
          <div style="padding-left: 10px;"class="menu-title" style='width: 100%'><a href='/shop'>shop </a>
            <img style="margin:5px;" src="/images/icons/submenu.png"><a href='/cart'>cart </a>
            <img style="margin:5px;" src="/images/icons/submenu.png"><span>checkout</span></div>
          <a href="./cart"><i class="icon-shopping-cart right custom-cart"></i></a>
        </div>
      </div>
    </div>


    <section id="content">
			<div class="content-wrap">
				<div class="container clearfix">
					<div class="clear"></div>

					<div class="row clearfix">
						<div class="col-lg-12 py-3 m-3 shop-container">
							<h4>Review Your Orders</h4>

							<div class="table-responsive">
								<table class="table cart">
									<thead>
										<tr>
											<th class="cart-product-thumbnail">&nbsp;</th>
											<th class="cart-product-name">Product</th>
											<th class="cart-product-framed">Framed</th>
											<th class="cart-product-price">Price</th>
											<th class="cart-product-quantity">Quantity</th>
											<th class="cart-product-subtotal">Total</th>
										</tr>
									</thead>
									<tbody>
										{{#cart}}
											<tr class="cart_item" id={{id}}>
											<td class="cart-product">
												<img class="custom-thumb" src="/art_imgs/prints/{{image}}" alt="{{name}}">
											</td>
											<td class="cart-product-name">
												<a href="#">{{name}}</a>
											</td>
											<td class="cart-product-framed">
												<span>no</span>
											</td>
											<td class="cart-product-price">
												<span class="amount">${{price}}</span>
											</td>
											<td class="cart-product-quantity">
												<div class="quantity clearfix">
													{{qty}}
												</div>
											</td>
											<td class="cart-product-subtotal">
												<span class="amount">${{total}}</span>
											</td>
										</tr>
										{{/cart}}
									</tbody>
								</table>
							</div>
						</div>
							<div class="col-lg-12 py-3 m-3 shop-container">
								<h4>Cart Totals</h4>
								<div class="table-responsive">
									<table class="table cart">
									<tbody>
										<tr class="cart_item">
											<td class="cart-product-name">
												<strong>Total</strong>
											</td>
											<td class="cart-product-name text-right">
												<span class="amount"><strong>${{grandTotal}}</strong></span>
											</td>
										</tr>
									</tbody>
								</table>
							</div>
						</div>
						<div class="col-lg-6 offset-lg-3 py-3 mt-3 shop-container">
							<h3 class="center">Shipping Address</h3>

							<form id="shipping-form" name="shipping-form" class="nobottommargin" action="#" method="post">

								<div class="col_full">
									<label for="shipping-form-name">Name:</label>
									<input type="text" id="shipping-form-name" name="shipping-form-name" value="" class="sm-form-control" />
								</div>

								<div class="clear"></div>

								<div class="col_full">
									<label for="shipping-form-address">Address:</label>
									<input type="text" id="shipping-form-address" name="shipping-form-address" value="" class="sm-form-control" />
								</div>

								<div class="col_full">
									<input type="text" id="shipping-form-address2" name="shipping-form-adress" value="" class="sm-form-control" />
								</div>

								<div class="col_full">
									<label for="shipping-form-city">City / Town</label>
									<input type="text" id="shipping-form-city" name="shipping-form-city" value="" class="sm-form-control" />
								</div>

								<div class="col_full">
									<label for="shipping-form-zipcode">Zip Code</label>
									<input type="text" id="shipping-form-zipcode" name="shipping-form-zipcode" value="" class="sm-form-control" />
								</div>

								<div class="col_full">
									<label for="shipping-form-message">Notes <small>*</small></label>
									<textarea class="sm-form-control" id="shipping-form-message" name="shipping-form-message" rows="6" cols="30"></textarea>
								</div>

							</form>
							<form action="charge" method="POST">
								<script
								src="https://checkout.stripe.com/checkout.js" class="stripe-button"
								data-key=""
								data-amount="{{grandTotal}}00"
								data-name="Joseph Edgerton Krause"
								data-description=""
								data-image="./checkoutlogo.png"
								data-locale="auto">
								</script>
							</form>
						</div>
						<div class="w-100 bottommargin"></div>
					</div>
				</div>

			</div>

		</section><!-- #content end -->


    {{> footer }}
	</div>
  </body>
  </html>
